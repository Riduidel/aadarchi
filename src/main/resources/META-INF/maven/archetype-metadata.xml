<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0
            http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" 
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="agile-architecture-documentation-archetype">
	<fileSets>
		<fileSet>
			<directory>.</directory>
			<includes>
				<include>.gitignore</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true">
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/docs/asciidoc</directory>
			<includes>
				<include>**/*.adoc</include>
			</includes>
		</fileSet>
	</fileSets>
</archetype-descriptor>