<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0
            http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	name="aadarchi-documentation-system">
	<requiredProperties>
		<requiredProperty key="groupId" />
		<requiredProperty key="artifactId" />
		<requiredProperty key="aadarchi-version">
			<defaultValue>UNDEFINED</defaultValue>
		</requiredProperty>
		<requiredProperty key="version">
			<defaultValue>0.0.1-SNAPSHOT</defaultValue>
		</requiredProperty>
	</requiredProperties>
	<fileSets>
		<fileSet>
			<directory></directory>
			<includes>
				<include>.gitignore</include>
				<include>.gitlab-ci.yml</include>
				<include>README.md</include>
				<include>.github/**/*</include>
			</includes>
		</fileSet>
<!-- 
		<fileSet filtered="true" packaged="true">
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
-->
		<fileSet filtered="true">
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet filtered="true">
			<directory>src/docs/asciidoc</directory>
			<includes>
				<include>**/*.adoc</include>
			</includes>
		</fileSet>
		<fileSet filtered="true">
			<directory>src/architecture/resources</directory>
			<includes>
				<include>workspace.dsl</include>
			</includes>
		</fileSet>
	</fileSets>
</archetype-descriptor>